generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // "postgresql"
  url      = "file:./dev.db" // env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  items             Item[]
  tokens            Token[]
  comments          Comment[]     @relation("user")
  mentionedComments Comment[]     @relation("mentionUser")
  commentLikes      CommentLike[]
  bookmarks         Bookmark[]
}

model Token {
  id              Int      @id @default(autoincrement())
  rotationCounter Int      @default(1)
  blocked         Boolean  @default(false)
  createdAt       DateTime @default(now())

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
}

model Item {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  author    String   @default("")
  link      String?
  thumbnail String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  itemStatus ItemStatus?

  publisher   Publisher @relation(fields: [publisherId], references: [id], onDelete: Cascade)
  publisherId Int
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int

  tags      Tag[]
  itemsTags ItemsTags[]
  comments  Comment[]
  itemLikes ItemLike[]
  bookmarks Bookmark[]

  @@index([createdAt(sort: Desc)])
}

model Publisher {
  id      Int     @id @default(autoincrement())
  name    String
  favicon String?
  domain  String  @unique

  items Item[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  item   Item? @relation(fields: [itemId], references: [id])
  itemId Int?

  itemsTags ItemsTags[]
}

model ItemsTags {
  item   Item @relation(fields: [itemId], references: [id])
  itemId Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  tagId  Int

  @@id([itemId, tagId])
  @@index(tagId)
  @@index(itemId)
}

model TagRelation {
  id          Int @id @default(autoincrement())
  tagId       Int
  originTagId Int

  @@index(tagId)
  @@index(originTagId)
}

model ItemLike {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  userId Int

  item   Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId Int

  @@unique([itemId, userId])
  @@index(itemId)
}

model ItemStatus {
  id           Int      @id @default(autoincrement())
  likeCount    Int      @default(0)
  commentCount Int      @default(0)
  clickCount   Int      @default(0)
  score        Float    @default(0)
  updatedAt    DateTime @default(now()) @updatedAt

  item   Item @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId Int  @unique

  @@index([score(sort: Desc), itemId(sort: Desc)])
  @@index([likeCount(sort: Desc), itemId(sort: Desc)])
}

model Comment {
  id              Int       @id @default(autoincrement())
  text            String
  likeCount       Int       @default(0)
  subcommentCount Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  deletedAt       DateTime?
  parentCommentId Int?

  item          Item  @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId        Int
  user          User  @relation("user", fields: [userId], references: [id], onDelete: Cascade)
  userId        Int
  mentionUser   User? @relation("mentionUser", fields: [mentionUserId], references: [id])
  mentionUserId Int?

  commentLikes CommentLike[]

  @@index(deletedAt)
  @@index(createdAt)
  @@index(parentCommentId)
}

model CommentLike {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int

  @@unique([commentId, userId])
  @@index(commentId)
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  item   Item @relation(fields: [itemId], references: [id])
  itemId Int
  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([userId, itemId])
  @@index(createdAt)
  @@index(userId)
}
